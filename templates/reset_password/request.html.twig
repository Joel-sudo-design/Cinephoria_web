{% extends 'baseMonEspace.html.twig' %}

{% block title %}Réinitialisation de mot de passe{% endblock %}

{% block body %}
    <div id="container-accueil" class="container-fluid align-content-center">
        <div class="row justify-content-center">
            <div class="col-11 col-sm-8 col-md-7 col-lg-5 col-xl-5 col-xxl-3 align-content-center border-register">
                <div class="row text-center justify-content-center my-3">
                    <div class="col-9 text-center title-reset">Indiquez votre email et nous vous enverrons un mot de passe provisoire</div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-9 p-0">
                        {% for flash_error in app.flashes('reset_password_error') %}
                            <div class="text-danger text-center" role="alert">{{ flash_error }}</div>
                        {% endfor %}
                    </div>
                </div>
                {{ form_start(requestForm) }}
                    <div class="row justify-content-center">
                        <div class="col-9 form-group p-0 mt-3">
                            {{ form_widget(requestForm.email, {'attr': {'class': 'form-control', 'placeholder': '', 'autocomplete': 'email', 'id': 'request_email'}}) }}
                            <label class="custom-label" for="request_email">Email</label>
                        </div>
                        <div class="col-9 p-0">
                            {% for error in requestForm.email.vars.errors %}
                                <div class="text-danger text-center" role="alert">{{ error.message }}</div>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="row justify-content-center align-items-center my-2">
                        <div class="col-9 form-floating text-center p-0">
                            <button class="btn-connexion w-100 fs-5">ENVOYER</button>
                        </div>
                    </div>
                {{ form_end(requestForm) }}
            </div>
            <div class="col-11 col-sm-8 col-md-7 col-lg-5 col-xl-5 col-xxl-3 border-register-img p-0">
                <img class="img-fluid" src="{{ asset('build/images/cinema.webp')}}" alt="cinéma">
            </div>
        </div>
    </div>
{% endblock %}
